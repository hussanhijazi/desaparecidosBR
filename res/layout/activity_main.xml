<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="@dimen/myMargin"
    android:layout_marginRight="@dimen/myMargin"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
     >

    <TextView
        android:id="@+id/inicio_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/myMargin"
        android:background="@drawable/bg_card"
        android:text="@string/texto_inicio" />

    <TextView
        android:id="@+id/ordenados_por_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Ordenados por data de desaparecimento"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/green_escuro" />

    <EditText
        android:id="@+id/pessoas_filter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/myMargin"
        android:hint="filtrar por nome ou cidade..."
        android:inputType="textVisiblePassword" />
    <ListView
        android:id="@+id/pessoas_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
         android:background="@color/gray_claro2"
         />

</LinearLayout>